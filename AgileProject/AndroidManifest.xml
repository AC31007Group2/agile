<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.StockTake"
          android:versionCode="1"
          android:versionName="1.0"
          android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <uses-sdk
            android:minSdkVersion="12"
            android:targetSdkVersion="19"/>


    <application
            android:icon="@drawable/glyphicons_040_stats"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light"
            android:name="com.StockTake.StockManager"
            android:logo="@drawable/glyphicons_040_stats">



        <activity
                android:name=".AgileProjectActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".SummaryActivity"
                android:label="@string/app_name"/>
        <activity
                android:name=".SummaryActivityRank"
                android:label="@string/app_name"/>
        <activity
                android:name=".SummaryActivityAlphabetical"
                android:label="@string/app_name"/>

        <activity
                android:name=".VolumeActivity"
                android:label="@string/app_name"/>


        <activity
                android:name=".RocketActivity"
                android:label="@string/app_name"/>

        <activity
                android:name=".SettingsActivity"
                android:label="@string/settings_menu"
                android:parentActivityName=".AgileProjectActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".AgileProjectActivity"/>
        </activity>

        <uses-library android:name="android.test.runner"/>

    </application>





</manifest>